---
import Navbar from '@/components/Navbar'
import { ViewTransitions } from 'astro:transitions'
const { title = 'Default site name', description } = Astro.props
---

<html lang="en" class="h-full w-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} {description ? `| ${description}` : null}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-background text-foreground flex flex-col flex-grow h-full w-full selection:bg-primary selection:text-background"
  >
    <Navbar />
    <main class="flex flex-col justify-center items-center min-h-full flex-grow p-4">
      <slot />
    </main>
  </body>
</html>
